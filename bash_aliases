# Source / Edit bash_profile
alias sbs=". ~/.bash_profile"

# CD
alias cd..="cd .."
alias cd-="cd -"

# Git
alias gst="git status"
alias gasp="git add -p db/schema.rb"
alias gpr="git log origin/development.. --reverse"
alias gpc="git log origin/development.. -- | wc -l"

# iOS Simulator
alias simulator='open /Applications/Xcode.app/Contents/Developer/Applications/iOS\ Simulator.app'

# LS
alias l="CLICOLOR_FORCE=1 ls -lAh"
alias la="CLICOLOR_FORCE=1 ls -A"
alias cls="CLICOLOR_FORCE=1 ls"

# MV
alias mvv="mv -v"

# RM
alias rmi="rm -i"

# Vim
alias vi="vim"

